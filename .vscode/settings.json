{
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "files.exclude": {
    ".husky": true,
    ".storybook": true,
    ".vscode": true,
    "node_modules": true
  },
  "explorer.fileNesting.patterns": {
    "package.json": "bun.lockb, .gitignore, .prettierignore, .prettierrc, postcss.config.js, tailwind.config.js, vite.config.ts, vitest.config.ts, vercel.json, tsconfig.json, playwright.config.ts, RELEASE.md, README.md",
    "ChangeLog.h": "branch-rule.jpg, changelog.test.ts, resolveLog.sh, ChangeLogHistory.h",
    "*.tsx": "${capture}.test.tsx, ${capture}.stories.tsx",
    "*.ts": "${capture}.test.ts"
  },
  "editor.inlineSuggest.showToolbar": "onHover"
}
